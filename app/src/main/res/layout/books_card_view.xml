<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_budget_card.xml -->
<layout>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"

        app:cardBackgroundColor="#ADCAFD">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           android:padding="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/authorNameTextView"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Budget Category"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="10dp"
                    android:padding="4dp"
                    android:textAlignment="center"
                    />
                <Switch
                    android:id="@+id/isReadToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:layout_marginBottom="2dp"
                 android:layout_gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/bookTitleTextView"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Budget Limit: $1000"
                    android:textSize="14sp"
                    android:textColor="#E8E7E7"
                    android:padding="4dp"

                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/deleteBook"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="X"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_styles"
                    android:visibility="visible"
                    android:layout_marginStart="13dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>